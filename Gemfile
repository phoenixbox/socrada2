gem 'slim', '2.0.0'
gem 'thin'

# Others
gem 'foreman'
gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'figaro'
gem 'better_errors'
gem 'binding_of_caller'
gem 'pry'

# Twitter Bootstrap
